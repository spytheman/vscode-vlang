// A launch configuration that launches the extension inside a new window
{
	"version": "0.1.0",
	"configurations": [
		{
			"name": "Launch Client",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Server",
			"port": 6011,
			"outFiles": [
				"${workspaceRoot}/out/server/*.js"
			],
			"restart": true,
		},
	],
	"compounds": [
		{
			"name": "Client + Server",
			"configurations": [
				"Launch Client",
				"Attach to Server"
			]
		}
	]
}
